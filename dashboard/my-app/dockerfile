# 1) Frontend bauen
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# 2) Über Nginx ausliefern + /api an PHP-Container weiterleiten
FROM nginx:alpine
# Unsere Nginx-Config überschreibt die Default-Site
COPY nginx.conf /etc/nginx/conf.d/default.conf
# Vite-Build ins Web-Verzeichnis
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80